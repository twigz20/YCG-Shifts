<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
    tools:context="jgoguette.twigzolupolus.ca.ycgshifts.Main.Fragments.ReadMessageFragment">

    <LinearLayout
        android:id="@+id/activity_read_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light">

            <TextView
                android:text="Sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/readNotificationSender"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/readNotificationTo"
                android:text="To:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                style="@style/Base.TextAppearance.AppCompat.Headline"/>

            <TextView
                android:text="timeStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/readNotificationTimeStamp"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/feed_item_timestamp"
                style="@style/Base.TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/readNotificationMessage"
                android:text="Message"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"/>/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
